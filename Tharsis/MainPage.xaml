                        <Image Name="dés4" Margin="-12.667,-11.333,-12.333,-11.333" HorizontalAlignment="Left" Width="25" Height="25" RenderTransformOrigin="-1.19,0.681"/>
                    </Button>
                    <Button Name="B_d5" Click="B_medecin_Click" Width="25" Height="25"  Margin="40,152,0,19">
